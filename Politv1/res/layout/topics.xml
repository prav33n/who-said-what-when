<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ListView
        android:id="@+id/tlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ads"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:divider="@color/background1"
        android:dividerHeight="3dp"
        android:visibility="visible" >

    </ListView>
    <Button
        android:id="@+id/ttopics"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:background="@drawable/title_button"
        android:onClick="topicsclick"
        android:text="@string/topic"
        android:textSize="20dp" />
    
    <TextView
        android:id="@+id/ttopicname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ttopics"
        android:layout_alignBottom="@+id/ttopics"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/ttopics"
        android:text="@string/topic"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/ads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ttopics"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/ttopics"
        android:layout_marginBottom="14dp" >

    </RelativeLayout>

</RelativeLayout>